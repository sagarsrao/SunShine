<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="yml.com.sunshine.activities.SplashActivity">


    <TextView
        android:id="@+id/textAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/eleven_dp"
        android:gravity="center_horizontal|center"
        android:text="@string/app_name"
        android:textColor="#000"
        android:textSize="@dimen/forty_sp"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/imageSunShine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/ic_splash_icon" />


    <TextView
        android:id="@+id/textCopyRightName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/twenty_six_dp"
        android:text="@string/app_footer"
        android:textColor="#000"
        android:textStyle="italic" />


</RelativeLayout>
