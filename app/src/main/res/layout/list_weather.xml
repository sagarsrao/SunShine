<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical">


    <!-- A CardView that contains a TextView -->
    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        card_view:cardCornerRadius="10dp">


        <ImageView
            android:id="@+id/imageView_movie"
            android:layout_width="@dimen/two_hundred_dp"
            android:layout_height="@dimen/two_hundred_dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/textView_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/one_hundred_eighty_dp"
            android:visibility="gone" />


        <TextView
            android:id="@+id/textView_overview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/Hundred_dp"
            android:textStyle="italic"
            android:visibility="gone" />


        <TextView
            android:id="@+id/textView_voteAverage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/fifty_dp"
            android:visibility="gone" />


        <TextView
            android:id="@+id/textView_popularity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="100dp"
            android:textStyle="italic"
            android:visibility="gone" />


        <TextView
            android:id="@+id/textView_release_Date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/fifty_dp"
            android:visibility="gone" />

    </android.support.v7.widget.CardView>


</RelativeLayout>